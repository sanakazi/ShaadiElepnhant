<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:id="@+id/main">



  <LinearLayout
      android:id="@+id/l1"
      android:layout_weight="0.3"
    android:layout_width="match_parent"
    android:layout_height="0dp"
      android:orientation="horizontal"
      >

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:id="@+id/rl1"
          android:padding="5dp"
          android:gravity="center|center_horizontal">



          <com.github.siyamed.shapeimageview.CircularImageView
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:id="@+id/img_profile_pic"
              android:src="@drawable/profile_circle"
              android:paddingLeft="10dp"
              android:layout_margin="5dp"
              app:siBorderWidth="1dp"
              app:siBorderColor="#ed0b7f"

              />



          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/txt_name"
              android:layout_toRightOf="@+id/img_profile_pic"
              android:textColor="#ed0b7f"
              android:textStyle="bold"
              android:textSize="15dp"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="20dp"
            />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/edit_mypage"
              android:src="@drawable/ic_edit_mypage"
              android:layout_marginTop="15dp"
              android:paddingRight="10dp"
              android:layout_toRightOf="@+id/txt_name"
              android:paddingBottom="5dp"
              android:paddingLeft="10dp"
              android:layout_marginLeft="10dp"
              />

          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/member_since"
          android:layout_toRightOf="@+id/img_profile_pic"
          android:layout_below="@+id/edit_mypage"
          android:text="@string/member_since"
          android:layout_marginLeft="20dp"/>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/txt_member_since"
              android:layout_toRightOf="@+id/img_profile_pic"
              android:layout_below="@+id/member_since"
              android:layout_marginLeft="20dp"
             />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/change_password"
              android:layout_toRightOf="@+id/img_profile_pic"
              android:layout_below="@+id/txt_member_since"
              android:text="@string/change_password"
              android:textColor="#ed0b7f"
              android:textStyle="italic"
              android:layout_marginLeft="20dp"

              />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/email_id"
              android:layout_toRightOf="@+id/img_profile_pic"
              android:layout_below="@+id/change_password"
              android:layout_marginLeft="20dp"

              />

      </RelativeLayout>

 </LinearLayout>





    <LinearLayout
        android:id="@+id/l2"
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

       <LinearLayout
           android:id="@+id/l2innerl1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="10dp">

           <ImageView
               android:layout_weight="0.5"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/img_planning"
               android:src="@drawable/my_planning"/>

           <ImageView
               android:layout_weight="0.5"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:id="@+id/designer_speak"
               android:src="@drawable/designer_speak"/>

       </LinearLayout>

        <LinearLayout
            android:id="@+id/l2innerl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/my_vendors"
                android:src="@drawable/my_vendors"/>

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/my_notes"
                android:src="@drawable/my_notes"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/l2innerl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/wedding_website"
                android:src="@drawable/wedding_website"/>

            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/guest_list"
                android:src="@drawable/guest_list"/>

        </LinearLayout>



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logout_leaf"
            android:src="@drawable/logout_leaf"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>



    </LinearLayout>




</LinearLayout>
    </ScrollView>