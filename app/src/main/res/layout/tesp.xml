        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/l3"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewTop">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewBottom"
                android:src="@drawable/flower_bottom"
                android:layout_alignParentLeft="true"


                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewCommunity"
                android:src="@drawable/ic_blog"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"

                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewContact"
                android:src="@drawable/ic_contact"
                android:layout_marginTop="113dp"
                android:layout_marginLeft="70dp" />


        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_weight="0.2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/l4"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageViewLogin"
                android:src="@drawable/login_leaf"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>


            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageViewLogout"
                android:text="Logout"
                android:textColor="#ffffff"
                android:background="@drawable/logout_leaf"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />


        </RelativeLayout>

    </LinearLayout>




</LinearLayout>


